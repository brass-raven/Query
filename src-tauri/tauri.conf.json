{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Query",
  "version": "0.1.0",
  "identifier": "com.brassraven.query",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Query",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Brass Raven",
    "category": "DeveloperTool",
    "shortDescription": "Modern PostgreSQL client",
    "longDescription": "A fast, modern PostgreSQL client built with Tauri, React, and TypeScript. Features include SQL IntelliSense, schema browsing, query history, vim mode, and more.",
    "copyright": "Copyright 2025 Brass Raven",
    "licenseFile": "../LICENSE",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "12.0"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "linux": {
      "appId": "com.brassraven.query",
      "section": "devel",
      "priority": "optional"
    }
  }
}
